<resources xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:colorBackground">@android:color/black</item>
		<item name="actionBarStyle">@style/ActionBar.RtkGps</item>
        <item name="preferenceTheme">@style/PreferenceCompatTheme</item>
        <item name="preferencePanelStyle">@style/PreferenceCompatTheme</item>
        <item name="preferenceListStyle">@style/PreferenceCompatTheme</item>
    </style>


    <style name="AppTheme.ActionBarOverlay"  >
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="preferenceTheme">@style/PreferenceCompatTheme</item>
    </style>
    
    <style name="ActionBar.RtkGps" parent="@android:style/Widget.Holo.ActionBar">
         <item name="displayOptions">useLogo|showHome|homeAsUp</item>
         <item name="background">@drawable/ab_transparent_rtkgps</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?attr/listPreferredItemPaddingRight</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PointNameAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
    </style>


</resources>